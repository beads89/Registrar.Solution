@{
  Layout = "_Layout";
}

@using Registrar.Models;
@model List<Registrar.Models.Student>;

<h1>Registered Students:</h1>

@if (@Model.Count == 0)
{
  <h3>No students have registered yet!</h3>
} 

@foreach (Student student in Model)
{
  <li>@Html.ActionLink($"{student.Description}", "Details", new { id = student.StudentId })</li>
}

<p>@Html.ActionLink("Register new student", "Create")</p>
<p>@Html.ActionLink("Return home", "Index", "Home")</p>